########################################################################

DOCUMENT();      

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

########################################################################

TEXT(beginproblem());

$showPartialCorrectAnswers = 1;

########################################################################

Context("Numeric");
Context()->strings->add(none=>{},EmptySet=>{alias=>"none"});

$a = random(2,8,1);

$lhs = Compute("x/(x-$a) -3");
$rhs = Compute("$a/(x-$a)"); 
 
$ans = Compute("None");

########################################################################

Context()->texStrings;
BEGIN_TEXT
Solve the equation
\[ 
$lhs = $rhs.
\]
$PAR
\(x =\) \{ ans_rule(30) \}
$PAR
If there is more than one correct answer, enter your answers as a comma separated list. If the equation has no real solution, write ${BBOLD}none${EBOLD}.
END_TEXT
Context()->normalStrings;

########################################################################

ANS( $ans->cmp() );

ENDDOCUMENT(); 
